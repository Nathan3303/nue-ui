{
    "name": "nue-ui",
    "version": "1.5.24",
    "description": "Components library by Vue3 + TS",
    "author": "Nathan33",
    "license": "MIT",
    "type": "module",
    "files": [
        "dist"
    ],
    "sideEffects": [
        "./dist/theme/index.css"
    ],
    "main": "./dist/umd/index.umd.cjs",
    "module": "./dist/es/index.js",
    "types": "./dist/types/core/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/core/index.d.ts",
            "require": "./dist/umd/index.umd.cjs",
            "import": "./dist/es/index.js"
        },
        "./dist/": {
            "require": "./dist/",
            "import": "./dist/"
        }
    },
    "scripts": {
        "remove-dist": "node ./scripts/remove-dist.js",
        "touch-dts-file": "node ./scripts/touch-dts-file.js",
        "build-es": "cross-env NODE_ENV=production vite build --config vite.es.config.ts",
        "build-umd": "cross-env NODE_ENV=production vite build --config vite.umd.config.ts",
        "before-build": "pnpm remove-dist",
        "after-build": "pnpm touch-dts-file",
        "build": "pnpm before-build && run-p build-es build-umd && pnpm after-build"
    },
    "keywords": [
        "NueUI",
        "nue-ui",
        "Vue3",
        "TypeScript"
    ],
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "shelljs": "^0.8.5",
        "vite-plugin-compression2": "^2.3.1",
        "vite-plugin-dts": "^4.5.4"
    },
    "peerDependencies": {
        "vue": "^3.5.18"
    }
}
